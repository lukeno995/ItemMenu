<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        android:clickable="true"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textPiatto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_nome_piatto"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textCosto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textPiatto"
                android:text="@string/text_nome_costo"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textCosto"
                android:text="@string/text_nome_categoria"
                android:textSize="20dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>